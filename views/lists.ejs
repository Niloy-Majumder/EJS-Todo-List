<%- include('header'); -%>

<div class="box" id="heading">
  <h1>It's a <%= renderday%> list</h1>
</div>
<div class="box">

  <%  item.forEach((items)=>{ %>
  <form action="/delete" method="post">
    <div class="item">
      <input type="checkbox" name="checkbox" value="<%= items._id%>" onChange="this.form.submit()">
      <p><%= items.name %></p>
    </div>
    <input type="hidden" name="listName" value="<%=renderday%>">
  </form>
  <%  }) %>


  <form class="item" action="/" method="post">
    <input name="listitem" id="List" type="text" placeholder="Add Items" autocomplete="off" />
    <button type="submit" name="button" value="<%= renderday%>">+</button>
  </form>
</div>
<%- include('footer'); -%>